/* pages/fixed-booking/list.wxss */
.container {
  min-height: 100vh;
  background: #f6f6f6;
  padding-bottom: 32rpx;
}

/* 顶部操作栏 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  background: #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.title {
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
}

.add-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 48rpx;
  font-size: 28rpx;
  border: none;
}

.add-btn::after {
  border: none;
}

.add-icon {
  font-size: 32rpx;
  font-weight: 300;
}

/* 预约列表 */
.booking-list {
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.booking-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.booking-info {
  margin-bottom: 24rpx;
}

.time-badge {
  display: inline-flex;
  align-items: center;
  gap: 12rpx;
  padding: 12rpx 24rpx;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  border-radius: 50rpx;
  margin-bottom: 16rpx;
}

.weekday {
  font-size: 28rpx;
  font-weight: 600;
  color: #667eea;
}

.time {
  font-size: 26rpx;
  color: #666;
}

.details {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.detail-row {
  display: flex;
  align-items: center;
  font-size: 28rpx;
}

.label {
  color: #999;
  min-width: 140rpx;
}

.value {
  color: #333;
  flex: 1;
}

.status {
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.status-1 {
  background: #e8f5e9;
  color: #4caf50;
}

.status-0 {
  background: #ffebee;
  color: #f44336;
}

/* 操作按钮 */
.actions {
  display: flex;
  gap: 12rpx;
  border-top: 1rpx solid #f0f0f0;
  padding-top: 16rpx;
}

.action-btn {
  flex: 1;
  height: 64rpx;
  line-height: 64rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
  border: none;
  padding: 0;
}

.action-btn::after {
  border: none;
}

.action-btn.primary {
  background: #e3f2fd;
  color: #2C7EF8;
}

.action-btn.danger {
  background: #ffebee;
  color: #f44336;
}

.action-btn:not(.primary):not(.danger) {
  background: #f5f5f5;
  color: #666;
}

/* 加载和空状态 */
.loading-container,
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 60vh;
  padding: 48rpx;
}

.loading-text,
.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-top: 16rpx;
}

.empty-icon {
  font-size: 96rpx;
  margin-bottom: 16rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #bbb;
  margin-top: 8rpx;
}

.empty-desc {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  margin-top: 32rpx;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.desc-text {
  font-size: 24rpx;
  color: #999;
  line-height: 1.6;
}

/* 测试区域 */
.test-section {
  padding: 24rpx;
  margin-top: 32rpx;
}

.test-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #fff3cd;
  color: #856404;
  border-radius: 16rpx;
  font-size: 28rpx;
  border: none;
}

.test-btn::after {
  border: none;
}
