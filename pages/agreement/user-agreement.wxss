/* pages/agreement/user-agreement.wxss */

.agreement-container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 32rpx;
}

.agreement-content {
  background: #fff;
  border-radius: 24rpx;
  padding: 48rpx 32rpx;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.08);
}

.agreement-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #333;
  text-align: center;
  margin-bottom: 48rpx;
}

.agreement-section {
  margin-bottom: 48rpx;
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.section-content {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  margin-bottom: 16rpx;
  text-align: justify;
}

.section-list {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  margin-bottom: 8rpx;
  padding-left: 20rpx;
}

.agreement-intro {
  margin-bottom: 48rpx;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.intro-text {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  text-align: justify;
}

.update-time {
  text-align: center;
  padding-top: 32rpx;
  border-top: 2rpx solid #f0f0f0;
}

.update-time text {
  font-size: 24rpx;
  color: #999;
}
