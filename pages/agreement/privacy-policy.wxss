/* pages/agreement/privacy-policy.wxss */

.agreement-container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 32rpx;
}

.agreement-content {
  background: #fff;
  border-radius: 24rpx;
  padding: 48rpx 32rpx;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.08);
}

.agreement-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #333;
  text-align: center;
  margin-bottom: 32rpx;
}

.policy-badge {
  text-align: center;
  margin-bottom: 32rpx;
  padding: 16rpx 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50rpx;
}

.badge-text {
  font-size: 26rpx;
  color: #fff;
  font-weight: 600;
}

.agreement-intro {
  margin-bottom: 48rpx;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.intro-text {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  text-align: justify;
  margin-bottom: 12rpx;
}

.agreement-section {
  margin-bottom: 48rpx;
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.section-content {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  margin-bottom: 16rpx;
  text-align: justify;
}

.section-list {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  margin-bottom: 8rpx;
  padding-left: 20rpx;
}

/* 表格样式 */
.info-table {
  margin: 24rpx 0;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  overflow: hidden;
}

.table-header {
  display: flex;
  background: #f5f5f5;
  border-bottom: 2rpx solid #e0e0e0;
}

.table-row {
  display: flex;
  border-bottom: 2rpx solid #f0f0f0;
}

.table-row:last-child {
  border-bottom: none;
}

.table-cell {
  flex: 1;
  padding: 16rpx 12rpx;
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
  text-align: center;
  border-right: 1rpx solid #f0f0f0;
  word-break: break-all;
}

.table-cell:last-child {
  border-right: none;
}

.table-header .table-cell {
  font-weight: 600;
  color: #333;
  background: #f5f5f5;
}

/* 通知框样式 */
.notice-box {
  margin: 24rpx 0;
  padding: 20rpx 24rpx;
  background: #f0f7ff;
  border-left: 6rpx solid #1890ff;
  border-radius: 8rpx;
}

.notice-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #1890ff;
  margin-bottom: 12rpx;
}

.notice-content {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
  text-align: justify;
}

.update-time {
  text-align: center;
  padding-top: 32rpx;
  border-top: 2rpx solid #f0f0f0;
}

.update-time text {
  font-size: 24rpx;
  color: #999;
}
