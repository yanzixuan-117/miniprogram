/* pages/admin-coach-select/coach-select.wxss */
.select-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f8f9ff 0%, #f6f6f6 100%);
  padding-bottom: 32rpx;
}

/* 筛选栏 */
.filter-bar {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #fff;
  gap: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.08);
  position: sticky;
  top: 0;
  z-index: 10;
}

.role-picker {
  flex-shrink: 0;
}

.picker-display {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 18rpx 28rpx;
  background: linear-gradient(135deg, #f8f9ff 0%, #f0f2ff 100%);
  border-radius: 16rpx;
  border: 2rpx solid #e8ebff;
  transition: all 0.3s;
}

.picker-display:active {
  transform: scale(0.98);
  background: linear-gradient(135deg, #e8ebff 0%, #e0e4ff 100%);
}

.picker-text {
  font-size: 28rpx;
  color: #667eea;
  font-weight: 600;
  white-space: nowrap;
}

.picker-arrow {
  font-size: 18rpx;
  color: #667eea;
}

.search-input {
  flex: 1;
  padding: 18rpx 28rpx;
  background: linear-gradient(135deg, #f8f9ff 0%, #f0f2ff 100%);
  border-radius: 16rpx;
  font-size: 28rpx;
  border: 2rpx solid #e8ebff;
  transition: all 0.3s;
}

.search-input:focus {
  background: #fff;
  border-color: #667eea;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

.search-btn {
  width: 180rpx!important;
  flex-shrink: 0;
  padding: 18rpx 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s;
}

.search-btn::after {
  border: none;
}

.search-btn:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

/* 用户列表 */
.user-list {
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.user-item {
  display: flex;
  align-items: center;
  padding: 28rpx;
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(102, 126, 234, 0.06);
  border: 2rpx solid transparent;
  transition: all 0.3s;
  position: relative;
  overflow: hidden;
}

.user-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 6rpx;
  background: linear-gradient(180deg, #667eea 0%, #764ba2 100%);
  opacity: 0;
  transition: opacity 0.3s;
}

.user-item:active {
  transform: scale(0.98);
  box-shadow: 0 8rpx 28rpx rgba(102, 126, 234, 0.12);
  border-color: #e8ebff;
}

.user-item:active::before {
  opacity: 1;
}

.user-avatar {
  width: 108rpx;
  height: 108rpx;
  border-radius: 50%;
  margin-right: 28rpx;
  background: linear-gradient(135deg, #f5f5f5 0%, #ebebeb 100%);
  flex-shrink: 0;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 14rpx;
  min-width: 0;
}

.user-name {
  font-size: 34rpx;
  font-weight: 700;
  color: #2c3e50;
  letter-spacing: 0.5rpx;
}

.user-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex-wrap: wrap;
}

.meta-item {
  font-size: 22rpx;
  color: #999;
  padding: 10rpx 18rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  font-weight: 600;
  letter-spacing: 0.5rpx;
}

.meta-item.role-coach {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.12) 0%, rgba(118, 75, 162, 0.12) 100%);
  color: #667eea;
  border: 2rpx solid rgba(102, 126, 234, 0.2);
}

.meta-item.role-student {
  background: linear-gradient(135deg, rgba(79, 172, 254, 0.12) 0%, rgba(0, 242, 254, 0.12) 100%);
  color: #4facfe;
  border: 2rpx solid rgba(79, 172, 254, 0.2);
}

.user-action {
  flex-shrink: 0;
  margin-left: 16rpx;
}

.action-text {
  font-size: 26rpx;
  color: #667eea;
  font-weight: 700;
  padding: 14rpx 24rpx;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.08) 0%, rgba(118, 75, 162, 0.08) 100%);
  border-radius: 16rpx;
  border: 2rpx solid rgba(102, 126, 234, 0.15);
  display: inline-block;
  transition: all 0.3s;
}

/* 加载和空状态 */
.loading-container,
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 48rpx;
}

.loading-text,
.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-top: 24rpx;
  font-weight: 500;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}
