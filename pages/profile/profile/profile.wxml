<!--pages/profile/profile.wxml-->
<view class="profile-container">
  <!-- 用户信息卡片 -->
  <view class="user-info-card">
    <image class="user-avatar" src="{{userInfo.avatarUrl || '/images/default-avatar.png'}}" mode="aspectFill"></image>
    <view class="user-details">
      <view class="user-nickname">{{userInfo.nickname || '未设置昵称'}}</view>
      <view class="user-role-badge role-{{userInfo.role}}">
        <text class="role-icon">{{roleIcon}}</text>
        <text>{{roleText}}</text>
      </view>
    </view>
    <view class="edit-btn" bindtap="goToEdit">
      <text class="edit-icon">✏️</text>
      <text class="edit-text">编辑</text>
    </view>
  </view>

  <!-- 其他信息列表 -->
  <view class="info-section">
    <view class="info-item">
      <text class="info-label">角色</text>
      <text class="info-value">{{roleText}}</text>
    </view>
    <view class="info-item">
      <text class="info-label">注册时间</text>
      <text class="info-value">{{createTime}}</text>
    </view>
  </view>
</view>
