/* pages/profile/profile.wxss */
.container {
  min-height: 100vh;
  background: #f6f6f6;
  padding-bottom: 32rpx;
}

/* 未登录状态 */
.not-login {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
}

.login-prompt {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 64rpx 48rpx;
}

.login-icon {
  width: 160rpx;
  height: 160rpx;
  line-height: 160rpx;
  text-align: center;
  border-radius: 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  margin-bottom: 32rpx;
  font-size: 50px;
}

.login-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.login-subtitle {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 48rpx;
}

.login-btn {
  width: 320rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 48rpx;
  padding: 28rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
}

.login-btn::after {
  border: none;
}

/* 头部信息 */
.profile-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 64rpx 32rpx 48rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.avatar-wrapper {
  position: relative;
  margin-bottom: 24rpx;
}

.avatar {
    width: 160rpx;
    height: 160rpx;
    border-radius: 50%;
    background: #fff;
    border: 6rpx solid rgba(255, 255, 255, 0.3);
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 16rpx;
}

.role-badge {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 24rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 48rpx;
  font-size: 24rpx;
  color: #fff;
}

.role-icon {
  font-size: 28rpx;
}

/* 管理员角色切换器 */
.admin-role-switcher {
  margin: 0 24rpx 24rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.1);
}

.switcher-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.switcher-icon {
  font-size: 32rpx;
}

.switcher-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.role-options {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.role-option {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
  position: relative;
}

.role-option.active {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  border-color: #667eea;
}

.role-icon-wrapper {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
  font-size: 36rpx;
}

.role-icon-wrapper.role-admin {
  background: linear-gradient(135deg, #ffd700 0%, #ffb347 100%);
}

.role-icon-wrapper.role-coach {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.role-icon-wrapper.role-student {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

.role-text {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.role-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.role-desc {
  font-size: 22rpx;
  color: #999;
}

.role-check {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #667eea;
  border-radius: 50%;
  color: #fff;
  font-size: 24rpx;
  font-weight: bold;
  opacity: 0;
  transform: scale(0.5);
  transition: all 0.3s;
}

.role-check.show {
  opacity: 1;
  transform: scale(1);
}

/* 统计数据 */
.stats-row {
  display: flex;
  justify-content: space-around;
  background: #fff;
  margin: -32rpx 24rpx 24rpx;
  padding: 32rpx 0;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-number {
  font-size: 40rpx;
  font-weight: bold;
  color: #667eea;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

/* 功能卡片 */
.menu-section {
  background: #fff;
  margin: 0 24rpx 24rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.section-title {
  padding: 24rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  background: #fff;
}

.menu-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
  padding: 0 24rpx 24rpx;
}

.menu-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 8rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
}

.menu-card-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.menu-card-text {
  font-size: 22rpx;
  color: #666;
  text-align: center;
}

/* 菜单列表 */
.menu-list {
  background: #fff;
  margin: 0 24rpx 24rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  background: #fff;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  margin-right: 16rpx;
}

.menu-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.arrow {
  font-size: 24rpx;
  color: #999;
}

/* 退出按钮 */
.logout-btn {
  margin: 0 24rpx;
  background: #fff;
  color: #f5222d;
  border-radius: 16rpx;
  padding: 28rpx;
  font-size: 28rpx;
  border: 1rpx solid #f5f5f5;
}

.logout-btn::after {
  border: none;
}

/* 用户信息底部 */
.user-info-footer {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx;
  margin-top: 16rpx;
}

.info-text {
  font-size: 20rpx;
  color: #ccc;
  margin-bottom: 8rpx;
}

/* 账号注销菜单项 */
.account-delete {
  margin-top: 16rpx;
  background: #fff5f5;
}

.delete-icon {
  color: #f5222d;
}

.delete-text {
  color: #f5222d;
}
