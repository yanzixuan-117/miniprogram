/* pages/profile/edit.wxss */

.edit-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f8f9ff 0%, #f7f7f7 100%);
  padding-bottom: 32rpx;
}

/* 顶部标题区域 */
.header-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 48rpx 32rpx 64rpx;
  text-align: center;
  border-radius: 0 0 32rpx 32rpx;
  margin-bottom: -32rpx;
  position: relative;
}

.header-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
}

.header-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #fff;
  margin-bottom: 8rpx;
}

.header-subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 卡片通用样式 */
.avatar-card,
.input-card {
  background: #fff;
  border-radius: 20rpx;
  margin: 20rpx 32rpx 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

/* 卡片头部 */
.card-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.card-icon {
  font-size: 32rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #000;
}

/* 头像卡片 */
.avatar-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
}

.avatar-wrapper {
  position: relative;
  width: 160rpx;
  height: 160rpx;
}

.avatar-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  background: linear-gradient(135deg, #f5f7fa 0%, #e8ecf1 100%);
  border: 4rpx solid #fff;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.15);
}

.avatar-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  padding: 6rpx 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.badge-text {
  font-size: 20rpx;
  color: #fff;
  font-weight: 600;
}

.change-avatar-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  width: 320rpx;
  height: 72rpx;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  color: #667eea;
  border-radius: 36rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  padding: 0;
  transition: all 0.3s;
}

.change-avatar-btn::after {
  border: none;
}

.btn-icon {
  font-size: 28rpx;
}

/* 输入卡片 */
.input-wrapper {
  position: relative;
  margin-bottom: 16rpx;
}

.nickname-input {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #f8f9ff 0%, #f5f7fa 100%);
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  color: #000;
  box-sizing: border-box;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.nickname-input:focus {
  background: #fff;
  border-color: #667eea;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

.input-placeholder {
  color: #aaa;
}

.char-count {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 22rpx;
  color: #999;
}

.input-tip {
  display: flex;
  align-items: flex-start;
  gap: 8rpx;
  padding: 16rpx;
  background: #fffbeb;
  border-radius: 12rpx;
  border-left: 4rpx solid #fbbf24;
}

.tip-icon {
  font-size: 24rpx;
  flex-shrink: 0;
}

.input-tip text:not(.tip-icon) {
  font-size: 22rpx;
  color: #92400e;
  line-height: 1.6;
}

/* 操作按钮 */
.action-buttons {
  padding: 0 32rpx;
}

.save-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  padding: 0;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s;
}

.save-btn::after {
  border: none;
}

.save-btn[disabled] {
  opacity: 0.6;
}

.save-icon {
  font-size: 32rpx;
}

.save-text {
  font-size: 32rpx;
}
