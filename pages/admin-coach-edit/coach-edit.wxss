/* pages/admin-coach-edit/coach-edit.wxss */
.edit-container {
  min-height: 100vh;
  background: #f6f6f6;
  padding-bottom: 32rpx;
}

.form-section {
  background: #fff;
  margin: 24rpx;
  border-radius: 16rpx;
  padding: 32rpx 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.form-item {
  display: flex;
  flex-direction: column;
  margin-bottom: 32rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.input {
  padding: 24rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
}

.textarea {
  width: 100%;
  min-height: 160rpx;
  padding: 24rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

/* 专长标签 */
.specialty-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag {
  padding: 16rpx 24rpx;
  background: #f5f5f5;
  border-radius: 50rpx;
  font-size: 26rpx;
  color: #666;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.tag.active {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  color: #667eea;
  border-color: #667eea;
}

/* 开关 */
.form-item switch {
  align-self: flex-start;
}

.status-text {
  margin-left: 16rpx;
  font-size: 26rpx;
  color: #999;
}

/* 按钮组 */
.button-group {
  display: flex;
  gap: 16rpx;
  padding: 0 24rpx;
}

.btn-primary,
.btn-danger {
  flex: 1;
  height: 88rpx;
  line-height: 58rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.btn-primary::after {
  border: none;
}

.btn-danger {
  background: #fff;
  color: #f5222d;
  border: 2rpx solid #f5222d;
}

.btn-danger::after {
  border: none;
}

/* 加载状态 */
.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}
