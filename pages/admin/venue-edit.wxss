/* pages/admin/venue-edit.wxss */

.container {
  min-height: 100vh;
  background: #f7f7f7;
  padding-bottom: 32rpx;
}

/* 页面标题 */
.page-header {
  padding: 32rpx;
  background: #fff;
  margin-bottom: 16rpx;
  text-align: center;
}

.page-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #000;
}

/* 表单内容 */
.form-content {
  padding-bottom: 120rpx;
}

.form-section {
  background: #fff;
  margin-bottom: 16rpx;
  padding: 24rpx 32rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #000;
  margin-bottom: 20rpx;
  padding-bottom: 12rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 表单项 */
.form-item {
  margin-bottom: 24rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 26rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.form-label.required::before {
  content: '*';
  color: #ff4d4f;
  margin-right: 4rpx;
}

.form-input {
  width: 100%;
  min-height: 80rpx;
  padding: 24rpx;
  background: #f7f7f7;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  line-height: 1.5;
}

/* 标签+按钮组合 */
.label-with-btn {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.label-with-btn .form-label {
  margin-bottom: 0;
  flex: 1;
}

.location-btn-mini {
    width: 140rpx !important;
    height: 50rpx !important;
    flex-shrink: 0;
    padding: 10rpx 16rpx;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: #fff;
    font-size: 30rpx;
    font-weight: 500;
    border-radius: 16rpx;
    border: none;
    box-shadow: 0 2rpx 6rpx rgba(102, 126, 234, 0.2);
    line-height: 1;
}

.location-btn-mini::after {
  border: none;
}

.location-btn-mini:active {
  opacity: 0.8;
  transform: scale(0.95);
}

.location-icon {
  font-size: 22rpx;
  line-height: 1;
}

.form-textarea {
  width: 100%;
  min-height: 160rpx;
  padding: 24rpx;
  background: #f7f7f7;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  box-sizing: border-box;
}

.char-count {
  text-align: right;
  font-size: 22rpx;
  color: #999;
  margin-top: 8rpx;
}

/* 图片上传 */
.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.image-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
}

.uploaded-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  background: #f7f7f7;
}

.upload-placeholder {
  width: 200rpx;
  height: 200rpx;
  border: 2rpx dashed #d9d9d9;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  background: #fafafa;
}

.upload-icon {
  font-size: 48rpx;
}

.upload-text {
  font-size: 22rpx;
  color: #999;
}

.delete-btn {
  position: absolute;
  top: -12rpx;
  right: -12rpx;
  width: 40rpx;
  height: 40rpx;
  background: #ff4d4f;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

.delete-icon {
  color: #fff;
  font-size: 32rpx;
  line-height: 1;
}

/* 时间选择 */
.time-range {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.time-picker {
  flex: 1;
  min-height: 80rpx;
  padding: 24rpx;
  background: #f7f7f7;
  border-radius: 8rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
}

.time-label {
  font-size: 26rpx;
  color: #666;
}

.time-value {
  font-size: 26rpx;
  color: #07c160;
  font-weight: 500;
}

.time-separator {
  font-size: 24rpx;
  color: #999;
}

/* 底部按钮 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 16rpx 32rpx;
  background: #fff;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background: #07c160;
  color: #fff;
  font-size: 28rpx;
  font-weight: 500;
  border-radius: 12rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn.disabled {
  background: #ccc;
  opacity: 0.6;
}

.submit-btn::after {
  border: none;
}

/* 加载状态 */
.loading-state {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 120rpx;
  font-size: 26rpx;
  color: #999;
}
