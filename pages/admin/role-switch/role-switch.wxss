/* pages/admin/role-switch/role-switch.wxss */
.role-switch-container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 24rpx;
}

/* 当前角色卡片 */
.current-role-card {
  background: linear-gradient(135deg, #2C7EF8 0%, #1976D2 100%);
  border-radius: 20rpx;
  padding: 40rpx 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(44, 126, 248, 0.3);
}

.card-title {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  display: block;
  margin-bottom: 16rpx;
}

.current-role-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.role-emoji {
  font-size: 64rpx;
}

.role-name {
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
}

/* 角色列表 */
.role-list {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx 24rpx;
  margin-bottom: 24rpx;
}

.list-title {
  font-size: 28rpx;
  color: #999;
  display: block;
  margin-bottom: 24rpx;
}

.role-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.role-item:last-child {
  border-bottom: none;
}

.role-main {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.role-detail {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.role-item .role-emoji {
  font-size: 48rpx;
}

.role-item .role-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.role-desc {
  font-size: 24rpx;
  color: #999;
}

.role-status {
  display: flex;
  align-items: center;
}

.current-badge {
  padding: 6rpx 16rpx;
  background: #e8f5e9;
  color: #4caf50;
  border-radius: 8rpx;
  font-size: 22rpx;
  font-weight: bold;
}

.arrow {
  font-size: 48rpx;
  color: #ccc;
  font-weight: 300;
}

/* 提示卡片 */
.tip-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  gap: 16rpx;
}

.tip-icon {
  font-size: 40rpx;
  flex-shrink: 0;
}

.tip-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.tip-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.tip-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
}
