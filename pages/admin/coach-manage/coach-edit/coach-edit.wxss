/* pages/admin/coach-manage/coach-edit.wxss */
.coach-edit-container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

.form-section {
  background: #fff;
  margin-top: 24rpx;
  padding: 32rpx 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

/* 头像 */
.avatar-btn {
  width: 200rpx;
  height: 200rpx;
  margin: 0;
  padding: 0;
  border-radius: 50%;
  border: none;
  background: transparent;
  position: relative;
}

.avatar-btn::after {
  border: none;
}

.avatar-img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: #f0f0f0;
}

.avatar-tip {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  font-size: 22rpx;
  padding: 8rpx 0;
  text-align: center;
  border-bottom-left-radius: 100rpx;
  border-bottom-right-radius: 100rpx;
}

/* 表单项 */
.form-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  width: 220rpx;
  font-size: 28rpx;
  color: #333;
  flex-shrink: 0;
}

.input {
  flex: 1;
  font-size: 28rpx;
}

.textarea {
  flex: 1;
  font-size: 28rpx;
  min-height: 120rpx;
  padding: 16rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  margin-top: 12rpx;
}

.switch-item {
  justify-content: space-between;
}

.status-text {
  margin-left: 16rpx;
  font-size: 26rpx;
  color: #666;
}

/* 标签 */
.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.tag-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  background: #e3f2fd;
  border-radius: 8rpx;
}

.tag-text {
  font-size: 26rpx;
  color: #2C7EF8;
}

.tag-close {
  font-size: 32rpx;
  color: #2C7EF8;
  font-weight: bold;
  line-height: 1;
}

.add-tag-row {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.tag-input {
  flex: 1;
  height: 72rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 16rpx;
  font-size: 28rpx;
}

.add-tag-btn {
  width: 120rpx;
  height: 72rpx;
  background: #2C7EF8;
  color: #fff;
  border-radius: 8rpx;
  font-size: 28rpx;
  line-height: 72rpx;
  padding: 0;
  border: none;
}

.add-tag-btn::after {
  border: none;
}

.add-tag-btn[disabled] {
  background: #ccc;
}

.suggestions {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.suggestion-tag {
  padding: 8rpx 16rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #666;
}

/* 底部 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 24rpx;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.save-btn {
  width: 100%;
  height: 88rpx;
  background: #2C7EF8;
  color: #fff;
  border-radius: 12rpx;
  font-size: 32rpx;
  border: none;
}

.save-btn::after {
  border: none;
}

.save-btn[disabled] {
  background: #ccc;
}

/* 加载中 */
.loading-container {
  padding: 120rpx 0;
  text-align: center;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}
