/* pages/login/login.wxss */

/* ============= 容器背景 ============= */
.login-container {
    min-height: 100vh;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 0;
    position: relative;
    overflow: hidden;
}

/* 背景装饰圆圈 - 显示 */
.bg-decoration {
    position: absolute;
    width: 100%;
    height: 100%;
    overflow: hidden;
    z-index: 0;
}

.circle {
    position: absolute;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.1);
    animation: float 6s ease-in-out infinite;
}

.circle-1 {
    width: 300rpx;
    height: 300rpx;
    top: -100rpx;
    left: -100rpx;
    animation-delay: 0s;
}

.circle-2 {
    width: 200rpx;
    height: 200rpx;
    top: 40%;
    right: -50rpx;
    animation-delay: 2s;
}

.circle-3 {
    width: 150rpx;
    height: 150rpx;
    bottom: -50rpx;
    left: 20%;
    animation-delay: 4s;
}

@keyframes float {
    0%, 100% {
        transform: translateY(0) rotate(0deg);
        opacity: 0.3;
    }
    50% {
        transform: translateY(-20rpx) rotate(180deg);
        opacity: 0.5;
    }
}

/* ============= 登录卡片 ============= */
.login-card {
    width: 100%;
    background: transparent;
    padding: 0;
    z-index: 1;
}

/* ============= Logo 区域 ============= */
.logo-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 100rpx 32rpx 60rpx;
}

.logo-emoji {
    font-size: 120rpx;
    margin-bottom: 24rpx;
    animation: bounce 2s ease-in-out infinite;
    filter: drop-shadow(0 4rpx 12rpx rgba(255, 255, 255, 0.3));
}

@keyframes bounce {
    0%, 100% {
        transform: translateY(0);
    }
    50% {
        transform: translateY(-20rpx);
    }
}

.app-name {
    font-size: 56rpx;
    font-weight: 700;
    color: #fff;
    margin-bottom: 16rpx;
    text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
    letter-spacing: 4rpx;
}

.app-slogan {
    font-size: 28rpx;
    color: rgba(255, 255, 255, 0.9);
    text-align: center;
    text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* ============= 登录内容区域 ============= */
.login-content {
    padding: 32rpx;
}

/* 欢迎区域 */
.welcome-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 32rpx 32rpx 48rpx;
}

.welcome-title {
    font-size: 40rpx;
    font-weight: 600;
    color: #fff;
    margin-bottom: 16rpx;
    text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.welcome-desc {
    font-size: 28rpx;
    color: rgba(255, 255, 255, 0.85);
}

/* ============= 表单区域 ============= */
.form-section {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border-radius: 24rpx;
    padding: 32rpx;
    margin-bottom: 24rpx;
    box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.form-label {
    display: flex;
    align-items: center;
    gap: 8rpx;
    margin-bottom: 24rpx;
}

.label-icon {
    font-size: 32rpx;
}

.label-text {
    font-size: 28rpx;
    font-weight: 600;
    color: #333;
}

.label-required {
    color: #ff4d4f;
    font-size: 28rpx;
    margin-left: 4rpx;
}

/* ============= 头像选择 ============= */
.avatar-section {
    background: rgba(255, 255, 255, 0.95);
}

.avatar-picker {
    position: relative;
    width: 200rpx !important;
    height: 200rpx !important;
    margin: 0 auto;
    padding: 0;
    border: none;
    background: transparent;
    overflow: visible;
    border-radius: 50%;
}

.avatar-picker::after {
    border: none;
}

.avatar-image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    border: 6rpx solid #fff;
    box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
    background: #f7f7f7;
    display: block;
    transition: all 0.3s ease;
}

.avatar-picker:active .avatar-image {
    transform: scale(0.95);
}

.avatar-placeholder {
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border: 6rpx solid #fff;
    box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
}

.avatar-picker:active .avatar-placeholder {
    transform: scale(0.95);
}

.placeholder-icon {
    font-size: 64rpx;
    margin-bottom: 8rpx;
    opacity: 0.9;
}

.placeholder-text {
    font-size: 24rpx;
    color: #fff;
    line-height: 1.2;
    text-align: center;
}

/* ============= 昵称输入 ============= */
.nickname-section {
    background: rgba(255, 255, 255, 0.95);
}

.nickname-input {
    width: 100%;
    padding: 24rpx 0;
    border: none;
    background: transparent;
    font-size: 32rpx;
    color: #333;
    height: auto;
    font-weight: 500;
}

.nickname-input::placeholder {
    color: #ccc;
}

/* ============= 微信登录按钮 ============= */
.wechat-login-btn {
    width: 100%;
    height: 100rpx;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 50rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 32rpx 0;
    border: none;
    box-shadow: 0 12rpx 40rpx rgba(102, 126, 234, 0.4);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
}

.wechat-login-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.2) 0%, rgba(255, 255, 255, 0) 100%);
    opacity: 0;
    transition: opacity 0.3s ease;
}

.wechat-login-btn:active::before {
    opacity: 1;
}

.wechat-login-btn::after {
    border: none;
}

.wechat-login-btn:active {
    background: linear-gradient(135deg, #5568d3 0%, #63408a 100%);
    transform: scale(0.98);
    box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.wechat-login-btn[disabled] {
    opacity: 0.6;
    transform: none;
}

.btn-text {
    color: #fff;
    font-size: 36rpx;
    font-weight: 600;
    letter-spacing: 2rpx;
    position: relative;
    z-index: 1;
}

/* ============= 登录中状态 ============= */
.logging-in {
    text-align: center;
    padding: 32rpx 0;
}

.loading-text {
    font-size: 28rpx;
    color: rgba(255, 255, 255, 0.9);
}

/* ============= 登录提示 ============= */
.login-tips {
    text-align: center;
    padding: 32rpx 0;
}

.tips-text {
    font-size: 24rpx;
    color: rgba(255, 255, 255, 0.75);
    line-height: 1.6;
}

/* ============= 协议同意区域 ============= */
.agreement-section {
    background: rgba(255, 255, 255, 0.95);
    border-radius: 24rpx;
    padding: 24rpx 32rpx;
    margin-bottom: 24rpx;
    box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.agreement-checkbox {
    display: flex;
    align-items: center;
    gap: 16rpx;
}

.checkbox {
    transform: scale(0.9);
}

.checkbox .wx-checkbox-input {
    border-radius: 8rpx;
}

.agreement-text {
    font-size: 26rpx;
    color: #666;
    line-height: 1.5;
    flex: 1;
}

.agreement-link {
    color: #667eea;
    text-decoration: underline;
}

.wechat-login-btn.disabled {
    opacity: 0.5;
    background: linear-gradient(135deg, #999 0%, #777 100%);
}

/* ============= 成功容器 ============= */
.success-container {
    min-height: 100vh;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.success-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 48rpx 32rpx;
}

.success-animation {
    text-align: center;
    margin-bottom: 48rpx;
}

.success-icon-wrapper {
    margin-bottom: 24rpx;
    animation: successBounce 0.6s ease-out;
}

@keyframes successBounce {
    0% {
        transform: scale(0);
        opacity: 0;
    }
    50% {
        transform: scale(1.2);
    }
    100% {
        transform: scale(1);
        opacity: 1;
    }
}

.success-emoji {
    font-size: 120rpx;
    display: block;
    filter: drop-shadow(0 8rpx 16rpx rgba(0, 0, 0, 0.2));
}

.success-title {
    font-size: 48rpx;
    font-weight: 700;
    color: #fff;
    margin-bottom: 16rpx;
    display: block;
    text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.success-desc {
    font-size: 28rpx;
    color: rgba(255, 255, 255, 0.9);
    display: block;
    margin-bottom: 32rpx;
}

/* 用户信息卡片 */
.user-info-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 48rpx;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border-radius: 24rpx;
    box-shadow: 0 12rpx 48rpx rgba(0, 0, 0, 0.15);
    width: calc(100% - 64rpx);
    box-sizing: border-box;
}

.user-avatar {
    width: 140rpx;
    height: 140rpx;
    min-width: 140rpx;
    min-height: 140rpx;
    border-radius: 50%;
    border: 6rpx solid #fff;
    box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
    background: #f7f7f7;
    margin-bottom: 24rpx;
    display: block;
    object-fit: cover;
}

.user-details {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
}

.user-nickname {
    font-size: 36rpx;
    font-weight: 600;
    color: #333;
}

/* ============= 响应式 ============= */
@media (max-width: 600rpx) {
    .logo-emoji {
        font-size: 100rpx;
    }

    .app-name {
        font-size: 48rpx;
    }
}
