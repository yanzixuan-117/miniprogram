/* pages/index/index.wxss */

.index-container {
  min-height: 100vh;
  background: #f7f7f7;
}

/* ============= 未登录状态 ============= */
.not-login {
  min-height: 100vh;
}

.welcome-banner {
  position: relative;
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.banner-bg {
  position: absolute;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.bg-circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.08);
}

.circle-1 {
  width: 400rpx;
  height: 400rpx;
  top: -100rpx;
  right: -100rpx;
}

.circle-2 {
  width: 300rpx;
  height: 300rpx;
  bottom: -50rpx;
  left: -50rpx;
}

.banner-content {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 48rpx;
  z-index: 1;
}

.logo-emoji {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.banner-content .title {
  font-size: 56rpx;
  font-weight: 500;
  color: #fff;
  margin-bottom: 12rpx;
}

.banner-content .subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 64rpx;
}

.login-btn {
  width: 480rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: #fff;
  color: #667eea;
  border-radius: 44rpx;
  padding: 0;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  text-align: center;
}

.login-btn::after {
  border: none;
}

/* ============= 已登录状态 ============= */
.logged-in {
  padding-bottom: 32rpx;
}

/* ============= 用户信息卡片 ============= */
.user-card {
  display: flex;
  align-items: center;
  background: #fff;
  margin: 16rpx 32rpx;
  padding: 24rpx 32rpx;
  border-radius: 12rpx;
}

.user-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 48rpx;
  background: #f7f7f7;
  margin-right: 24rpx;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.user-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #000;
}

.user-role-badge {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
}

.user-role-badge.student {
  background: #e8f5e9;
  color: #07C160;
}

.user-role-badge.coach {
  background: #fff3e0;
  color: #ff9800;
}

.user-action {
  padding: 8rpx;
}

.action-icon {
  font-size: 36rpx;
  opacity: 0.5;
}

/* ============= 统计栏 ============= */
.stats-bar {
  display: flex;
  justify-content: space-around;
  background: #fff;
  margin: 0 32rpx 16rpx;
  padding: 32rpx 0;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stat-number {
  font-size: 40rpx;
  font-weight: 500;
  color: #07C160;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

.stat-divider {
  width: 1rpx;
  background: #eee;
}

/* ============= 快捷操作 ============= */
.quick-actions {
  display: flex;
  justify-content: space-around;
  background: #fff;
  margin: 0 32rpx 16rpx;
  padding: 32rpx 0;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.action-icon-wrapper {
  width: 96rpx;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  border-radius: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.15);
}

.action-icon {
  font-size: 44rpx;
}

.action-text {
  font-size: 24rpx;
  color: #333;
}

/* ============= 区块 ============= */
.section {
  background: #fff;
  margin: 0 32rpx 16rpx;
  padding: 32rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #000;
}

.section-header .more {
  font-size: 24rpx;
  color: #999;
}

.badge {
  background: #f5222d;
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 16rpx;
  margin-left: 8rpx;
}

/* ============= 预约列表 ============= */
.booking-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.booking-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background: #f7f7f7;
  border-radius: 12rpx;
}

.booking-item.coach-booking {
  flex-direction: column;
  align-items: stretch;
  gap: 16rpx;
}

.booking-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex: 1;
}

.booking-date {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  height: 80rpx;
  background: #fff;
  border-radius: 12rpx;
}

.date-day {
  font-size: 32rpx;
  font-weight: 500;
  color: #07C160;
}

.date-month {
  font-size: 20rpx;
  color: #999;
}

.time-slot {
  font-size: 24rpx;
  font-weight: 500;
  color: #333;
}

.time-divider {
  font-size: 20rpx;
  color: #ddd;
}

.booking-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.coach-name,
.student-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #000;
}

.booking-time {
  font-size: 24rpx;
  color: #666;
}

.booking-note {
  font-size: 22rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 上课人列表 */
.students-info {
  display: flex;
  flex-wrap: wrap;
  align-items: flex-start;
  gap: 4rpx;
  line-height: 1.5;
}

.students-label {
  font-size: 22rpx;
  color: #999;
  flex-shrink: 0;
}

.students-names {
  font-size: 22rpx;
  color: #333;
  font-weight: 500;
  flex: 1;
  word-wrap: break-word;
}

.booking-status {
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  font-weight: 500;
  flex-shrink: 0;
}

.booking-status.status-pending {
  background: #fff7e6;
  color: #faad14;
}

.booking-status.status-confirmed {
  background: #e8f5e9;
  color: #07C160;
}

.booking-status.status-rejected {
  background: #fff1f0;
  color: #f5222d;
}

.booking-actions {
  display: flex;
  gap: 12rpx;
  width: 100%;
}

.action-btn {
  flex: 1;
  height: 64rpx;
  line-height: 64rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  font-weight: 500;
  border: none;
  padding: 0;
}

.action-btn::after {
  border: none;
}

.action-btn.approve {
  background: #07C160;
  color: #fff;
}

.action-btn.reject {
  background: #f5222d;
  color: #fff;
}

/* ============= 教练卡片横向滚动 ============= */
.coach-scroll {
  white-space: nowrap;
}

.coach-list {
  display: inline-flex;
  gap: 16rpx;
  padding: 0 2rpx;
}

.coach-card {
  display: inline-block;
  width: 200rpx;
  vertical-align: top;
  white-space: normal;
}

.coach-avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  background: #f7f7f7;
  margin-bottom: 12rpx;
}

.coach-card .coach-name {
  font-size: 26rpx;
  font-weight: 500;
  color: #000;
  display: block;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.coach-tags {
  margin-bottom: 8rpx;
}

.tag {
  display: inline-block;
  background: #f0f0f0;
  color: #666;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  margin-right: 8rpx;
}

.coach-rating {
  font-size: 22rpx;
  color: #999;
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.star {
  color: #ffc107;
}

.rating {
  font-weight: 500;
  color: #333;
}

.count {
  color: #999;
}

/* ============= 视频网格 ============= */
.video-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
}

.video-item {
  position: relative;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.video-thumb {
  width: 100%;
  height: 180rpx;
  border-radius: 12rpx;
  background: #f7f7f7;
}

.video-play {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 48rpx;
  height: 48rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.play-icon {
  color: #fff;
  font-size: 20rpx;
  margin-left: 4rpx;
}

.video-title {
  font-size: 24rpx;
  font-weight: 400;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.video-info {
  font-size: 20rpx;
  color: #999;
  display: flex;
  gap: 16rpx;
}

.view-count,
.duration {
  display: flex;
  align-items: center;
  gap: 4rpx;
}

/* ============= 空状态 ============= */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 32rpx;
  background: #fff;
  margin: 0 32rpx 16rpx;
  border-radius: 12rpx;
}

.empty-icon {
  font-size: 96rpx;
  margin-bottom: 16rpx;
  opacity: 0.3;
}

.empty-text {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.empty-hint {
  font-size: 24rpx;
  color: #999;
}

/* ============= 管理员专属功能区 ============= */
.admin-section {
  background: #fff;
  margin: 0 32rpx 16rpx;
  padding: 32rpx;
  border-radius: 12rpx;
  border: 2rpx solid #9c27b0;
}

.admin-section .section-title {
  color: #9c27b0;
}

.admin-section .action-icon-wrapper.admin {
  background: linear-gradient(135deg, rgba(156, 39, 176, 0.1) 0%, rgba(156, 39, 176, 0.2) 100%);
}
