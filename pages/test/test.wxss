/* pages/test/test.wxss */
.container {
  min-height: 100vh;
  background: #f6f6f6;
  padding: 24rpx;
  padding-bottom: 120rpx;
}

.test-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  text-align: center;
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 8rpx;
}

.subtitle {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 区块 */
.section {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

/* 信息行 */
.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-row:last-child {
  border-bottom: none;
}

.label {
  font-size: 26rpx;
  color: #666;
}

.value {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.value.small {
  font-size: 22rpx;
  color: #999;
}

.value.success {
  color: #52c41a;
}

/* 测试按钮 */
.test-btn {
  width: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 12rpx;
  padding: 28rpx;
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 16rpx;
  border: none;
}

.test-btn.primary {
  background: linear-gradient(135deg, #52c41a 0%, #389e0d 100%);
  font-size: 30rpx;
  padding: 32rpx;
  font-weight: 600;
}

.test-btn.secondary {
  background: #f5f5f5;
  color: #666;
}

.test-btn.warning {
  background: linear-gradient(135deg, #faad14 0%, #d48806 100%);
}

.test-btn.danger {
  background: linear-gradient(135deg, #f5222d 0%, #cf1322 100%);
}

.test-btn[disabled] {
  opacity: 0.6;
}

.test-btn::after {
  border: none;
}

/* 日志容器 */
.log-container {
  max-height: 600rpx;
  background: #1e1e1e;
  border-radius: 12rpx;
  padding: 16rpx;
}

.log-item {
  margin-bottom: 12rpx;
  padding-bottom: 12rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
}

.log-item:last-child {
  border-bottom: none;
}

.log-time {
  display: block;
  font-size: 20rpx;
  color: #999;
  margin-bottom: 4rpx;
}

.log-message {
  display: block;
  font-size: 24rpx;
  color: #ddd;
  margin-bottom: 4rpx;
}

.log-data {
  display: block;
  font-size: 20rpx;
  color: #999;
  font-family: 'Courier New', monospace;
  white-space: pre-wrap;
  word-break: break-all;
}

.log-item.info .log-message {
  color: #40a9ff;
}

.log-item.success .log-message {
  color: #52c41a;
}

.log-item.error .log-message {
  color: #f5222d;
}

.log-item.warning .log-message {
  color: #faad14;
}
