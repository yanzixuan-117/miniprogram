.container{min-height:100vh;background:#f6f6f6;padding-bottom:32rpx}
.search-bar{padding:24rpx;background:#fff}
.search-box{display:flex;align-items:center;justify-content:space-between;padding:20rpx 24rpx;background:#f5f5f5;border-radius:48rpx}
.search-placeholder{font-size:28rpx;color:#999}
.search-icon{font-size:32rpx}
.category-tabs{display:flex;white-space:nowrap;padding:24rpx;background:#fff;margin-bottom:16rpx}
.tab-item{display:inline-block;padding:12rpx 32rpx;margin-right:16rpx;font-size:28rpx;color:#666;background:#f5f5f5;border-radius:48rpx}
.tab-item.active{color:#fff;background:#667eea}
.video-list{padding:0 24rpx}
.video-item{display:flex;background:#fff;border-radius:16rpx;padding:24rpx;margin-bottom:24rpx}
.video-thumb-wrapper{position:relative;width:280rpx;height:200rpx;flex-shrink:0;margin-right:24rpx}
.video-thumb{width:100%;height:100%;border-radius:12rpx;background:#f0f0f0}
.video-duration{position:absolute;bottom:8rpx;right:8rpx;padding:4rpx 12rpx;background:rgba(0,0,0,0.6);color:#fff;font-size:20rpx;border-radius:8rpx}
.video-info{flex:1;display:flex;flex-direction:column;justify-content:space-between}
.video-title{font-size:28rpx;font-weight:600;color:#333}
.video-meta{display:flex;gap:12rpx;margin-top:12rpx}
.video-category{font-size:22rpx;color:#667eea;padding:4rpx 12rpx;background:rgba(102,126,234,0.1);border-radius:8rpx}
.video-difficulty{font-size:22rpx;padding:4rpx 12rpx;border-radius:8rpx}
.difficulty-1{color:#52c41a;background:rgba(82,196,26,0.1)}
.difficulty-2{color:#faad14;background:rgba(250,173,20,0.1)}
.difficulty-3{color:#f5222d;background:rgba(245,34,45,0.1)}
.video-stats{display:flex;gap:24rpx;margin-top:12rpx}
.stat-item{font-size:22rpx;color:#999}
.load-more{padding:32rpx;text-align:center;font-size:28rpx;color:#999}
.empty-state{display:flex;flex-direction:column;align-items:center;justify-content:center;padding:120rpx 0}
.empty-icon{font-size:96rpx;margin-bottom:24rpx}
.empty-text{font-size:28rpx;color:#999}
