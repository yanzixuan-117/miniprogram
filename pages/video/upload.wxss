/* pages/video/upload/upload.wxss */
.upload-container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 160rpx;
}

/* 表单区块 */
.form-section {
  background: #fff;
  margin-bottom: 20rpx;
  padding: 32rpx 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

/* 上传按钮 */
.upload-btn {
  width: 100%;
  height: 200rpx;
  background: #f5f5f5;
  border: 2rpx dashed #ddd;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  color: #666;
  font-size: 28rpx;
}

.upload-btn::after {
  border: none;
}

.upload-btn[disabled] {
  opacity: 0.6;
}

.upload-icon {
  font-size: 64rpx;
}

.upload-text {
  font-size: 26rpx;
}

/* 上传进度 */
.upload-progress {
  margin-top: 24rpx;
}

.progress-bar {
  height: 8rpx;
  background: #e0e0e0;
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 12rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #2C7EF8 0%, #5BA3F5 100%);
  transition: width 0.3s;
}

.progress-text {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  display: block;
}

.upload-tip {
  font-size: 24rpx;
  color: #999;
  margin-top: 16rpx;
}

/* 视频预览 */
.video-preview {
  position: relative;
  width: 100%;
  height: 400rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background: #000;
}

.preview-video {
  width: 100%;
  height: 100%;
}

.video-remove {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  width: 48rpx;
  height: 48rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.remove-icon {
  font-size: 40rpx;
  color: #fff;
  line-height: 1;
}

/* 封面预览 */
.cover-preview {
  position: relative;
  width: 100%;
  height: 400rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.cover-image {
  width: 100%;
  height: 100%;
}

.cover-remove {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  width: 48rpx;
  height: 48rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 表单项 */
.form-item {
  margin-bottom: 32rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.textarea {
  width: 100%;
  min-height: 160rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 16rpx 24rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.picker {
  width: 100%;
  height: 80rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  box-sizing: border-box;
}

.picker-content {
  width: 88vw;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.picker-arrow {
  font-size: 24rpx;
  color: #999;
  margin-left: 16rpx;
}

.picker-text:empty::before {
  content: attr(placeholder);
  color: #999;
}

/* Switch */
.switch-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.switch-item .label {
  margin-bottom: 0;
  flex: 1;
}

.switch-item switch {
  flex-shrink: 0;
}

.status-text {
  margin-left: 16rpx;
  flex-shrink: 0;
}

.status-text {
  font-size: 26rpx;
  color: #666;
}

/* 标签 */
.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.tag-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 20rpx;
  background: #e3f2fd;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #2C7EF8;
}

.tag-close {
  font-size: 32rpx;
  line-height: 1;
  cursor: pointer;
}

.suggestions {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.suggestion-tag {
  padding: 8rpx 20rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.3s;
}

.suggestion-tag.selected {
  background: #e3f2fd;
  color: #2C7EF8;
}

/* 上传提示 */
.upload-hint {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 24rpx;
  background: #fff8e1;
  border-radius: 8rpx;
  margin-top: 16rpx;
}

.hint-icon {
  font-size: 28rpx;
}

.hint-text {
  font-size: 24rpx;
  color: #f57c00;
}

/* 底部按钮 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 24rpx;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.08);
  z-index: 100;
}

.save-btn {
  width: 100%;
  height: 88rpx;
  background: #2C7EF8;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.save-btn::after {
  border: none;
}

.save-btn[disabled] {
  background: #ccc;
}

/* 加载中 */
.loading-container {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}
