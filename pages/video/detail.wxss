/* pages/video/detail.wxss */
.detail-container {
  min-height: 100vh;
  background: #f5f5f5;
}

/* 视频播放器 */
.video-player-wrapper {
  width: 100%;
  background: #000;
  position: relative;
}

.video-player {
  width: 100%;
  height: 420rpx;
  background: #000;
}

.video-cover {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.3);
}

.cover-image {
  width: 100%;
  height: 100%;
}

.play-btn {
  position: absolute;
  width: 120rpx;
  height: 120rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  color: #333;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.3);
}

/* 视频信息 */
.video-info {
  background: #fff;
  padding: 32rpx 24rpx;
  margin-bottom: 20rpx;
}

.info-header {
  margin-bottom: 24rpx;
}

.video-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.5;
  margin-bottom: 16rpx;
}

.video-stats {
  display: flex;
  gap: 24rpx;
}

.stat-item {
  font-size: 26rpx;
  color: #999;
}

/* 元数据标签 */
.video-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.meta-tag {
  padding: 8rpx 20rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.category-tag {
  background: #e3f2fd;
  color: #2C7EF8;
}

.difficulty-tag {
  background: #fff3e0;
  color: #ff9800;
}

.difficulty-1 {
  background: #e8f5e9;
  color: #4caf50;
}

.difficulty-2 {
  background: #fff3e0;
  color: #ff9800;
}

.difficulty-3 {
  background: #ffebee;
  color: #f44336;
}

.video-duration {
  font-size: 24rpx;
  color: #999;
}

/* 标签 */
.tags-row {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.tag-item {
  font-size: 26rpx;
  color: #2C7EF8;
}

/* 简介 */
.video-description {
  padding: 24rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
}

.description-label {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.description-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 操作按钮栏 */
.action-bar {
  display: flex;
  justify-content: space-around;
  padding-top: 24rpx;
  border-top: 1rpx solid #f0f0f0;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.action-icon {
  font-size: 40rpx;
}

.action-text {
  font-size: 24rpx;
  color: #666;
}

/* 作者信息 */
.author-section {
  background: #fff;
  padding: 24rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.author-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.author-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #f0f0f0;
}

.author-detail {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.author-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.author-role {
  font-size: 24rpx;
  color: #999;
}

.author-actions {
  display: flex;
  gap: 12rpx;
}

.follow-btn,
.contact-btn {
  padding: 0 24rpx;
  height: 60rpx;
  width: 150rpx!important;
  line-height: 60rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  border: none;
}

.follow-btn {
  background: #2C7EF8;
  color: #fff;
}

.follow-btn::after {
  border: none;
}

.contact-btn {
  background: #f5f5f5;
  color: #333;
}

.contact-btn::after {
  border: none;
}

/* 评论区 */
.comments-section {
  background: #fff;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  font-size: 26rpx;
  color: #999;
}

/* 评论列表 */
.comments-list {
  max-height: 600rpx;
  overflow-y: auto;
}

.comment-item {
  display: flex;
  gap: 16rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.comment-item:last-child {
  border-bottom: none;
}

.comment-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: #f0f0f0;
  flex-shrink: 0;
}

.comment-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.comment-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.comment-user {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
}

.comment-time {
  font-size: 22rpx;
  color: #999;
}

.comment-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  word-break: break-all;
}

.comment-actions {
  display: flex;
  justify-content: flex-end;
  margin-top: 8rpx;
}

.comment-delete {
  font-size: 24rpx;
  color: #f44336;
  padding: 4rpx 12rpx;
}

/* 评论输入框 */
.comment-input-box {
  display: flex;
  gap: 12rpx;
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid #f0f0f0;
}

.comment-input {
  flex: 1;
  height: 72rpx;
  padding: 0 20rpx;
  background: #f5f5f5;
  border-radius: 36rpx;
  font-size: 28rpx;
}

.comment-send-btn {
  width: 120rpx !important;
  height: 72rpx;
  line-height: 72rpx;
  padding: 0;
  background: #2C7EF8;
  color: #fff;
  font-size: 26rpx;
  border: none;
  border-radius: 36rpx;
}

.comment-send-btn::after {
  border: none;
}

.comments-loading {
  padding: 40rpx 0;
  text-align: center;
  font-size: 26rpx;
  color: #999;
}

.comments-empty {
  padding: 80rpx 0;
  text-align: center;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

.empty-hint {
  font-size: 24rpx;
  color: #ccc;
}

/* 加载中 */
.loading-container {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}
