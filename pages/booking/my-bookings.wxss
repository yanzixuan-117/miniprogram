/* pages/booking/my-bookings.wxss */

.my-bookings-container {
  min-height: 100vh;
  background: #f7f7f7;
  padding-top: 24rpx;
  padding-bottom: 32rpx;
}

/* 状态筛选 */
.status-tabs {
  display: flex;
  white-space: nowrap;
  padding: 24rpx 32rpx;
  background: #fff;
  margin-bottom: 16rpx;
}

.tab-item {
  display: inline-block;
  padding: 12rpx 28rpx;
  margin-right: 16rpx;
  font-size: 26rpx;
  color: #666;
  background: #f5f5f5;
  border-radius: 48rpx;
  transition: all 0.3s;
}

.tab-item.active {
  color: #fff;
  background: #07c160;
  font-weight: 500;
}

/* 预约列表 */
.booking-list {
  padding: 0 32rpx;
}

.booking-item {
  margin-bottom: 24rpx;
}

.booking-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

/* 日期显示 */
.booking-date {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.date-calendar {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 12rpx;
  flex-shrink: 0;
}

.date-month {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 4rpx;
}

.date-day {
  font-size: 40rpx;
  font-weight: 600;
  color: #fff;
  line-height: 1;
  margin-bottom: 4rpx;
}

.date-weekday {
  font-size: 18rpx;
  color: rgba(255, 255, 255, 0.8);
}

.booking-time {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.time-text {
  font-size: 32rpx;
  font-weight: 500;
  color: #000;
}

/* 教练信息 */
.booking-coach {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.coach-avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  background: #f7f7f7;
  flex-shrink: 0;
}

.coach-info {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.coach-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #000;
}

.status-badge {
  padding: 6rpx 16rpx;
  border-radius: 24rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.status-badge.status-pending {
  background: #fff7e6;
  color: #fa8c16;
}

.status-badge.status-confirmed {
  background: #e6f7ff;
  color: #1890ff;
}

.status-badge.status-completed {
  background: #f6ffed;
  color: #52c41a;
}

.status-badge.status-cancelled {
  background: #f5f5f5;
  color: #999;
}

.status-badge.status-rejected {
  background: #fff1f0;
  color: #f5222d;
}

/* 备注信息 */
.booking-note {
  padding: 16rpx;
  background: #f7f7f7;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
}

.note-label {
  font-size: 24rpx;
  color: #999;
  margin-right: 8rpx;
}

.note-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
}

/* 操作按钮 */
.booking-actions {
  display: flex;
  justify-content: flex-end;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.action-btn {
  padding: 16rpx 32rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  border: none;
  background: #f5f5f5;
  color: #666;
}

.action-btn.cancel {
  background: #fff1f0;
  color: #f5222d;
}

.action-btn::after {
  border: none;
}

/* 加载中 */
.loading-state {
  display: flex;
  justify-content: center;
  padding: 120rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 96rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.empty-hint {
  font-size: 24rpx;
  color: #ccc;
  margin-bottom: 48rpx;
}

.go-booking-btn {
  width: 240rpx;
  height: 80rpx;
  background: #07c160;
  color: #fff;
  border-radius: 48rpx;
  padding: 0;
  font-size: 28rpx;
  line-height: 80rpx;
  border: none;
}

.go-booking-btn::after {
  border: none;
}
