/* pages/booking/coach-list.wxss */

.coach-list-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f0f9ff 0%, #f7f7f7 100%);
  padding-top: 24rpx;
  padding-bottom: 32rpx;
}

/* 筛选排序栏 - 芯片设计 */
.filter-section {
  display: flex;
  gap: 16rpx;
  padding: 0 32rpx 24rpx;
}

.filter-chip {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 20rpx 24rpx;
  background: #fff;
  border-radius: 48rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
}

.filter-chip.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-color: #667eea;
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.3);
}

.filter-chip .chip-icon {
  font-size: 28rpx;
}

.filter-chip .chip-text {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

.filter-chip.active .chip-text {
  color: #fff;
}

.filter-chip .chip-arrow {
  font-size: 20rpx;
  color: #999;
}

.filter-chip.active .chip-arrow {
  color: #fff;
}

/* 教练列表 */
.coach-list {
  padding: 0 32rpx;
}

.coach-item {
  margin-bottom: 24rpx;
}

/* 教练卡片 - 现代设计 */
.coach-card {
  position: relative;
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.coach-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* 卡片头部渐变背景 */
.card-header-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 200rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  opacity: 0.08;
  border-radius: 24rpx 24rpx 0 0;
}

/* 卡片内容 */
.card-content {
  position: relative;
  padding: 32rpx;
  display: flex;
  gap: 24rpx;
}

/* 头像包装器 */
.avatar-wrapper {
  position: relative;
  flex-shrink: 0;
}

.coach-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #f7f7f7;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
  border: 2px solid #fff;
}

.avatar-ring {
  position: absolute;
  top: -8rpx;
  left: -8rpx;
  right: -8rpx;
  bottom: -8rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
  pointer-events: none;
}

/* 教练信息 */
.coach-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  padding-top: 8rpx;
}

.coach-name-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16rpx;
}

.coach-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #1a1a1a;
}

.rating-badge {
  display: flex;
  align-items: center;
  gap: 4rpx;
  padding: 8rpx 16rpx;
  background: linear-gradient(135deg, #ffa726 0%, #ff7043 100%);
  border-radius: 48rpx;
  box-shadow: 0 4rpx 8rpx rgba(255, 112, 67, 0.2);
}

.rating-star {
  font-size: 20rpx;
  color: #fff;
}

.rating-text {
  font-size: 24rpx;
  font-weight: 600;
  color: #fff;
}

/* 专长标签 */
.coach-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.coach-tags .tag {
  padding: 8rpx 16rpx;
  background: linear-gradient(135deg, #e8f5e9 0%, #c8e6c9 100%);
  color: #2e7d32;
  font-size: 22rpx;
  border-radius: 24rpx;
  font-weight: 500;
  box-shadow: 0 2rpx 6rpx rgba(46, 125, 50, 0.1);
}

/* 元信息 */
.coach-meta {
  display: flex;
  gap: 24rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.meta-icon {
  font-size: 24rpx;
}

.meta-text {
  font-size: 24rpx;
  color: #666;
}

/* 卡片底部操作按钮 */
.card-actions {
  display: flex;
  gap: 16rpx;
  padding: 30rpx 32rpx 20rpx;
}

.detail-btn,
.book-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  height: 80rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
}

.detail-btn {
  background: #f5f5f5;
  color: #666;
}

.detail-btn::after,
.book-btn::after {
  border: none;
}

.detail-btn:active {
  background: #e8e8e8;
}

.book-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  box-shadow: 0 8rpx 16rpx rgba(102, 126, 234, 0.3);
}

.book-btn:active {
  opacity: 0.9;
  box-shadow: 0 4rpx 8rpx rgba(102, 126, 234, 0.3);
}

.btn-icon {
  font-size: 28rpx;
}

/* 加载中 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  gap: 24rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f0f0f0;
  border-top-color: #667eea;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.empty-hint {
  font-size: 24rpx;
  color: #ccc;
}
