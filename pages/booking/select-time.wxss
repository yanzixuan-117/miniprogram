/* pages/booking/select-time.wxss */

.select-time-container {
  min-height: 100vh;
  background: #f7f7f7;
  padding-bottom: 32rpx;
  padding-top: 32rpx;
}

/* 教练信息卡片 */
.coach-info-card {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 24rpx 32rpx;
  background: #fff;
  margin: 0 32rpx 16rpx;
  border-radius: 12rpx;
}

.coach-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #f7f7f7;
}

.coach-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.coach-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #000;
}

.coach-date {
  font-size: 24rpx;
  color: #999;
}

/* 时间段容器 */
.time-slots-container {
  background: #fff;
  margin: 0 32rpx 16rpx;
  border-radius: 12rpx;
  padding: 24rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #000;
  margin-bottom: 24rpx;
}

/* 时间段网格 */
.time-slots-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.time-slot-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 24rpx 16rpx;
  background: #e8f5e9;
  border-radius: 8rpx;
  border: 2rpx solid transparent;
  gap: 8rpx;
}

.time-slot-item.available {
  background: #e8f5e9;
  border-color: #52c41a;
}

.time-slot-item.disabled {
  background: #f7f7f7;
  border-color: #e0e0e0;
  opacity: 0.6;
}

.slot-time {
  font-size: 26rpx;
  font-weight: 500;
  color: #000;
}

.slot-status {
  font-size: 22rpx;
  color: #999;
}

.slot-status.available {
  color: #52c41a;
}

/* 提示信息 */
.tips-section {
  padding: 0 32rpx;
}

.tip-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 24rpx;
  background: #fff8e1;
  border-radius: 8rpx;
}

.tip-icon {
  font-size: 28rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #ff9800;
  line-height: 1.5;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 32rpx;
  text-align: center;
}

.empty-icon {
  font-size: 96rpx;
  margin-bottom: 16rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 12rpx;
}

.empty-hint {
  font-size: 24rpx;
  color: #999;
}
