/* pages/booking/select-booking.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 32rpx;
}

.header {
  text-align: center;
  margin-bottom: 48rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #999;
}

.section {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 24rpx;
}

.picker {
  width: 100%;
}

.picker-display {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
}

.arrow {
  font-size: 32rpx;
  color: #999;
}

/* 时间段样式 */
.time-section {
  min-height: 300rpx;
}

.time-slots {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.time-slot {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.time-slot.available {
  background: #e8f5e9;
}

.time-slot.selected {
  background: #2C7EF8;
  color: #fff;
  border-color: #2C7EF8;
}

.time-slot.selected .slot-time,
.time-slot.selected .slot-end-time {
  color: #fff;
}

.time-slot.disabled {
  opacity: 0.4;
  pointer-events: none;
}

.slot-time {
  font-size: 28rpx;
  font-weight: 600;
  margin-right: 8rpx;
}

.slot-end-time {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.slot-status {
  font-size: 22rpx;
  color: #f44336;
}

/* 加载和空状态 */
.loading, .empty {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 60rpx 0;
  font-size: 28rpx;
  color: #999;
}

.empty-text {
  font-size: 26rpx;
}

/* 信息汇总 */
.summary {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.summary-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.summary-item {
  display: flex;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.summary-item:last-child {
  border-bottom: none;
}

.summary-label {
  font-size: 28rpx;
  color: #666;
  width: 140rpx;
  flex-shrink: 0;
}

.summary-value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

/* 提交按钮 */
.submit-section {
  margin-top: 32rpx;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 16rpx;
  border: none;
}

.submit-btn::after {
  border: none;
}

.submit-btn[disabled] {
  opacity: 0.6;
}

/* 日历样式 */
.calendar-section {
  padding-bottom: 24rpx;
}

.calendar-weekdays {
  display: flex;
  margin-bottom: 16rpx;
}

.weekday-item {
  flex: 1;
  text-align: center;
  font-size: 24rpx;
  color: #999;
  padding: 16rpx 0;
}

.calendar-scroll {
  max-height: 500rpx;
}

.calendar-days {
  display: flex;
  flex-wrap: wrap;
}

.day-item {
  width: 14.28%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 0;
  margin-bottom: 8rpx;
  border-radius: 8rpx;
  transition: all 0.3s;
}

.day-item.empty {
  pointer-events: none;
}

.day-item.today {
  background: #fff3e0;
}

.day-item.selected {
  background: #2C7EF8;
}

.day-item.selected .day-date,
.day-item.selected .day-weekday {
  color: #fff;
}

.day-date {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 4rpx;
}

.day-weekday {
  font-size: 22rpx;
  color: #999;
}

.day-item.selected .day-weekday {
  color: rgba(255, 255, 255, 0.8);
}
