/* pages/booking/select-date.wxss */

.select-date-container {
  min-height: 100vh;
  background: #f7f7f7;
  padding-bottom: 120rpx;
  padding-top: 32rpx;
}

/* 教练信息卡片 */
.coach-info-card {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 24rpx 32rpx;
  background: #fff;
  margin: 0 32rpx 16rpx;
  border-radius: 12rpx;
}

.coach-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #f7f7f7;
}

.coach-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.coach-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #000;
}

/* 加载状态 */
.loading-state {
  display: flex;
  justify-content: center;
  padding: 120rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 日历卡片 */
.calendar-card {
  background: #fff;
  margin: 0 32rpx 16rpx;
  border-radius: 12rpx;
  padding: 24rpx;
}

/* 月份切换 */
.calendar-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 0;
  margin-bottom: 24rpx;
}

.month-nav {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: #f7f7f7;
}

.month-nav:active {
  background: #e8e8e8;
}

.nav-icon {
  font-size: 48rpx;
  color: #333;
  font-weight: 300;
}

.month-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #000;
}

/* 星期标题 */
.weekdays {
  display: flex;
  margin-bottom: 16rpx;
}

.weekday {
  flex: 1;
  text-align: center;
  font-size: 24rpx;
  color: #999;
  font-weight: 500;
}

/* 日期网格 */
.date-grid {
  display: flex;
  flex-wrap: wrap;
}

.date-item {
  width: 14.28%;
  aspect-ratio: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 8rpx;
  border-radius: 50%;
  position: relative;
}

.date-day {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.date-label {
  font-size: 18rpx;
  color: #07c160;
  margin-top: -4rpx;
}

/* 其他月份 */
.date-item.other-month {
  opacity: 0.3;
}

/* 不可用日期 */
.date-item.unavailable {
  opacity: 0.4;
}

.date-item.unavailable .date-day {
  color: #ccc;
  text-decoration: line-through;
}

/* 今天 */
.date-item.today {
  background: #e8f5e9;
}

.date-item.today .date-day {
  color: #07c160;
  font-weight: 600;
}

/* 选中状态 */
.date-item.selected {
  background: #07c160;
}

.date-item.selected .date-day {
  color: #fff;
}

.date-item.selected .date-label {
  color: #fff;
}

/* 提示信息 */
.tips-section {
  padding: 0 32rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.tip-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 24rpx;
  background: #fff8e1;
  border-radius: 8rpx;
}

.tip-icon {
  font-size: 28rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #ff9800;
  line-height: 1.5;
}

/* 已选日期信息 */
.selected-info {
  background: #fff;
  margin: 0 32rpx 16rpx;
  padding: 24rpx 32rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  border-left: 4rpx solid #07c160;
}

.info-label {
  font-size: 24rpx;
  color: #999;
}

.info-value {
  font-size: 28rpx;
  font-weight: 500;
  color: #07c160;
}

/* 底部按钮 */
.bottom-action {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 32rpx;
  background: #fff;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.confirm-btn {
  width: 100%;
  height: 88rpx;
  background: #07c160;
  color: #fff;
  font-size: 28rpx;
  font-weight: 500;
  border-radius: 12rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.confirm-btn.disabled {
  background: #ccc;
  color: #fff;
}

.confirm-btn::after {
  border: none;
}
