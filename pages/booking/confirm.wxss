/* pages/booking/confirm.wxss */

.confirm-container {
  min-height: 100vh;
  background: #f7f7f7;
  padding-top: 24rpx;
  padding-bottom: 32rpx;
}

/* 教练信息卡片 */
.coach-info-card {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 24rpx 32rpx;
  background: #fff;
  margin: 0 32rpx 16rpx;
  border-radius: 12rpx;
}

.coach-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #f7f7f7;
}

.coach-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.coach-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #000;
}

.coach-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.coach-tags .tag {
  padding: 4rpx 12rpx;
  background: #e8f5e9;
  color: #52c41a;
  font-size: 20rpx;
  border-radius: 4rpx;
}

/* 预约信息卡片 */
.booking-info-card {
  background: #fff;
  margin: 0 32rpx 16rpx;
  border-radius: 12rpx;
  padding: 24rpx 32rpx;
}

.info-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #000;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
}

.info-label {
  font-size: 26rpx;
  color: #666;
}

.info-value {
  font-size: 26rpx;
  color: #000;
  font-weight: 500;
}

/* 球馆选择 */
.venue-options {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 12rpx;
}

.venue-item {
  flex: 1;
  min-width: 180rpx;
  padding: 20rpx 24rpx;
  background: #f7f7f7;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 8rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.venue-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.venue-item.selected {
  background: #e8f5e9;
  border-color: #52c41a;
}

.venue-item.unavailable {
  background: #f5f5f5;
  opacity: 0.6;
}

.venue-item.unavailable .venue-name {
  color: #999;
}

.venue-name {
  font-size: 26rpx;
  color: #333;
}

.venue-item.selected .venue-name {
  color: #52c41a;
  font-weight: 500;
}

.venue-desc {
  font-size: 22rpx;
  color: #999;
}

.unavailable-text {
  font-size: 22rpx;
  color: #ff4d4f;
}

.venue-check {
  font-size: 24rpx;
  color: #52c41a;
  font-weight: bold;
  flex-shrink: 0;
}

.loading-text,
.empty-text {
  width: 100%;
  padding: 24rpx;
  text-align: center;
  font-size: 26rpx;
  color: #999;
}

/* 备注输入 */
.note-section {
  background: #fff;
  margin: 0 32rpx 16rpx;
  border-radius: 12rpx;
  padding: 24rpx 32rpx;
}

.note-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #000;
  margin-bottom: 16rpx;
}

.note-input {
  width: 100%;
  min-height: 120rpx;
  padding: 16rpx;
  background: #f7f7f7;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #333;
  line-height: 1.6;
  box-sizing: border-box;
}

.note-count {
  text-align: right;
  font-size: 22rpx;
  color: #999;
  margin-top: 8rpx;
}

/* 上课人列表 */
.students-section {
  background: #fff;
  margin: 0 32rpx 16rpx;
  border-radius: 12rpx;
  padding: 24rpx 32rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #000;
}

.add-btn {
  padding: 8rpx 20rpx;
  background: #07c160;
  color: #fff;
  font-size: 24rpx;
  border-radius: 8rpx;
  border: none;
  line-height: 1.5;
}

.add-btn::after {
  border: none;
}

.students-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.student-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx;
  background: #f7f7f7;
  border-radius: 8rpx;
}

.student-name {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.delete-btn {
  padding: 8rpx 16rpx;
  font-size: 24rpx;
  color: #ff4d4f;
  flex-shrink: 0;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
  gap: 8rpx;
}

.empty-text {
  font-size: 26rpx;
  color: #999;
}

.empty-hint {
  font-size: 24rpx;
  color: #ccc;
}

/* 添加上课人弹窗 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 600rpx;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #000;
}

.modal-close {
  font-size: 36rpx;
  color: #999;
  line-height: 1;
}

.modal-body {
  padding: 32rpx;
}

.form-item {
  margin-bottom: 24rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  display: block;
  font-size: 26rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.form-input {
  width: 100%;
  height: 72rpx;
  padding: 0 16rpx;
  background: #f7f7f7;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #333;
  box-sizing: border-box;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
}

.modal-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 28rpx;
  border: none;
  border-radius: 0;
}

.cancel-btn {
  background: #fff;
  color: #666;
  border-right: 1rpx solid #f0f0f0;
}

.confirm-btn {
  background: #07c160;
  color: #fff;
  font-weight: 500;
}

.modal-btn::after {
  border: none;
}

/* 提示信息 */
.tips-section {
  padding: 0 32rpx;
}

.tip-item {
  display: flex;
  align-items: flex-start;
  gap: 8rpx;
  padding: 16rpx;
  background: #fff8e1;
  border-radius: 8rpx;
  margin-bottom: 12rpx;
}

.tip-icon {
  font-size: 28rpx;
  flex-shrink: 0;
}

.tip-text {
  flex: 1;
  font-size: 24rpx;
  color: #ff9800;
  line-height: 1.5;
}

/* 底部按钮 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 16rpx 32rpx;
  background: #fff;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background: #07c160;
  color: #fff;
  font-size: 28rpx;
  font-weight: 500;
  border-radius: 12rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn.disabled {
  background: #ccc;
  opacity: 0.6;
}

.submit-btn::after {
  border: none;
}
