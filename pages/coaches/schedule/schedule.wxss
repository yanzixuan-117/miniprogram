/* pages/coaches/schedule.wxss */

.container {
  min-height: 100vh;
  background: #f7f7f7;
  padding-bottom: 120rpx;
}

/* 加载状态 */
.loading-state {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 120rpx;
  font-size: 26rpx;
  color: #999;
}

/* 主内容 */
.content {
  padding-top: 24rpx;
}

/* 区块 */
.section {
  background: #fff;
  margin: 0 32rpx 24rpx;
  padding: 32rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #1a1a1a;
  margin-bottom: 24rpx;
}

/* 周卡片网格 */
.week-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.day-card {
  width: calc((100% - 32rpx) / 3);
  min-height: 180rpx;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
}

.day-card:active {
  transform: scale(0.98);
  border-color: #2C7EF8;
}

.day-card.sunday {
  width: 100%;
  flex-direction: row;
  justify-content: space-between;
  min-height: 100rpx;
}

.sunday-content {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.day-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #1a1a1a;
  margin-bottom: 12rpx;
}

.day-slots {
  font-size: 22rpx;
  color: #666;
  text-align: center;
  line-height: 1.4;
  margin-bottom: 12rpx;
  word-break: break-all;
}

.edit-btn {
  font-size: 22rpx;
  color: #2C7EF8;
  padding: 6rpx 16rpx;
  background: rgba(44, 126, 248, 0.1);
  border-radius: 12rpx;
  margin-top: auto;
}

/* 批量操作 */
.batch-actions {
  display: flex;
  gap: 16rpx;
}

.batch-btn {
  flex: 1;
  height: 72rpx;
  line-height: 72rpx;
  padding: 0;
  font-size: 26rpx;
  border-radius: 12rpx;
  background: #2C7EF8;
  color: #fff;
  border: none;
}

.batch-btn::after {
  border: none;
}

.batch-btn.secondary {
  background: #fff;
  color: #2C7EF8;
  border: 2rpx solid #2C7EF8;
}

.batch-btn:active {
  opacity: 0.8;
}

/* 特殊日期列表 */
.date-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.date-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #f7f7f7;
  border-radius: 12rpx;
}

.date-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.date-value {
  font-size: 28rpx;
  font-weight: 500;
  color: #1a1a1a;
}

.date-reason {
  font-size: 22rpx;
  color: #999;
}

.date-delete {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ff4d4f;
  border-radius: 50%;
  margin-left: 12rpx;
}

.delete-icon {
  color: #fff;
  font-size: 32rpx;
  line-height: 1;
}

.empty-dates {
  padding: 60rpx 0;
  text-align: center;
}

.empty-text {
  font-size: 24rpx;
  color: #999;
}

.add-date-btn {
  width: 100%;
  height: 72rpx;
  line-height: 72rpx;
  padding: 0;
  font-size: 26rpx;
  border-radius: 12rpx;
  background: #fff;
  color: #2C7EF8;
  border: 2rpx dashed #2C7EF8;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}

.add-date-btn::after {
  border: none;
}

.add-icon {
  font-size: 32rpx;
  font-weight: 300;
}

/* 编辑弹窗 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
  box-sizing: border-box;
}

.modal-container {
  width: 100%;
  max-width: 640rpx;
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #1a1a1a;
}

.modal-close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.close-icon {
  font-size: 48rpx;
  color: #999;
  line-height: 1;
}

.modal-content {
  padding: 32rpx;
}

.slots-list {
  max-height: 600rpx;
}

.slot-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #f7f7f7;
  border-radius: 12rpx;
  margin-bottom: 12rpx;
  transition: all 0.3s ease;
}

.slot-item.checked {
  background: linear-gradient(135deg, rgba(44, 126, 248, 0.1) 0%, rgba(44, 126, 248, 0.2) 100%);
  border: 2rpx solid #2C7EF8;
}

.slot-checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  flex-shrink: 0;
  background: #fff;
}

.slot-item.checked .slot-checkbox {
  background: #2C7EF8;
  border-color: #2C7EF8;
  color: #fff;
}

.slot-time {
  font-size: 26rpx;
  color: #333;
}

.modal-actions {
  display: flex;
  gap: 12rpx;
  margin-top: 24rpx;
}

.modal-btn {
  flex: 1;
  height: 68rpx;
  line-height: 68rpx;
  padding: 0;
  font-size: 26rpx;
  border-radius: 12rpx;
  border: none;
}

.modal-btn::after {
  border: none;
}

.modal-btn.primary {
  background: #2C7EF8;
  color: #fff;
}

.modal-btn.secondary {
  background: #f7f7f7;
  color: #666;
}

.modal-btn.danger {
  background: #fff;
  color: #ff4d4f;
  border: 2rpx solid #ff4d4f;
}

.modal-btn:active {
  opacity: 0.8;
}

.modal-footer {
  display: flex;
  gap: 16rpx;
  padding: 24rpx 32rpx;
  border-top: 1rpx solid #eee;
}

.modal-btn-large {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0;
  font-size: 28rpx;
  border-radius: 12rpx;
  border: none;
}

.modal-btn-large::after {
  border: none;
}

.modal-btn-large.primary {
  background: #2C7EF8;
  color: #fff;
}

.modal-btn-large.secondary {
  background: #f7f7f7;
  color: #666;
}

.modal-btn-large:active {
  opacity: 0.8;
}

/* 底部操作 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 32rpx;
  background: #fff;
  border-top: 1rpx solid #eee;
  box-sizing: border-box;
}

.save-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 16rpx;
  background: linear-gradient(135deg, #2C7EF8 0%, #1a6fe8 100%);
  color: #fff;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(44, 126, 248, 0.3);
}

.save-btn::after {
  border: none;
}

.save-btn:active {
  opacity: 0.9;
  transform: translateY(2rpx);
}

.save-btn.disabled {
  opacity: 0.6;
}
