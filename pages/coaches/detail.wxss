/* pages/coaches/detail.wxss */

.detail-container {
  min-height: 100vh;
  background: #f7f7f7;
  padding-top: 24rpx;
  padding-bottom: 120rpx;
}

/* 教练信息卡片 */
.coach-card {
  background: #fff;
  margin: 0 32rpx 16rpx;
  border-radius: 16rpx;
  padding: 32rpx;
  display: flex;
  gap: 24rpx;
}

.coach-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #f7f7f7;
  flex-shrink: 0;
}

.coach-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.coach-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #000;
}

.coach-rating {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.star {
  font-size: 24rpx;
}

.rating {
  font-size: 28rpx;
  font-weight: 500;
  color: #ff9800;
}

.count {
  font-size: 24rpx;
  color: #999;
}

.coach-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.tag {
  padding: 6rpx 16rpx;
  background: #e8f5e9;
  color: #52c41a;
  font-size: 22rpx;
  border-radius: 4rpx;
}

/* 区块 */
.section {
  background: #fff;
  margin: 0 32rpx 16rpx;
  border-radius: 16rpx;
  padding: 24rpx 32rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #000;
  margin-bottom: 16rpx;
}

.intro-text,
.exp-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.cert-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.cert-item {
  padding: 8rpx 16rpx;
  background: #f0f0f0;
  color: #666;
  font-size: 24rpx;
  border-radius: 4rpx;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 16rpx 32rpx;
  background: #fff;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.book-btn {
  width: 100%;
  height: 88rpx;
  background: #07c160;
  color: #fff;
  font-size: 28rpx;
  font-weight: 500;
  border-radius: 12rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.book-btn::after {
  border: none;
}
