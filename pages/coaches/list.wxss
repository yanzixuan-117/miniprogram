/* pages/coaches/list.wxss */

.coach-list-container {
  min-height: 100vh;
  background: #f7f7f7;
  padding-top: 24rpx;
  padding-bottom: 32rpx;
}

/* 加载中 */
.loading-state {
  display: flex;
  justify-content: center;
  padding: 120rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 教练列表 */
.coach-list {
  padding: 24rpx 32rpx;
}

.coach-card {
  display: flex;
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.coach-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
  background: #f7f7f7;
}

.coach-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-left: 24rpx;
}

.coach-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.coach-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #000;
}

.coach-rating {
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.star {
  font-size: 24rpx;
}

.rating {
  font-size: 24rpx;
  color: #ff9800;
  font-weight: 500;
}

.count {
  font-size: 22rpx;
  color: #999;
}

/* 专长标签 */
.coach-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 8rpx 16rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 24rpx;
  font-size: 22rpx;
  color: #fff;
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
}

/* 简介 */
.coach-intro {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 底部信息 */
.coach-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.experience {
  font-size: 24rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 96rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.empty-hint {
  font-size: 24rpx;
  color: #ccc;
}
