/* pages/coaches/profile.wxss */

.coach-profile-container {
  min-height: 100vh;
  background: #f6f6f6;
  padding-bottom: 32rpx;
}

/* 表单区域 */
.form-section {
  background: #fff;
  margin: 24rpx;
  border-radius: 16rpx;
  padding: 32rpx 24rpx;
}

.form-item {
  margin-bottom: 40rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.required {
  color: #f5222d;
  margin-left: 4rpx;
}

/* 头像 */
.avatar-section {
  display: flex;
  align-items: center;
  gap: 32rpx;
}

.avatar-preview {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  background: #f0f0f0;
}

.upload-btn {
  padding: 12rpx 32rpx;
  font-size: 26rpx;
  background: #667eea;
  color: #fff;
  border-radius: 8rpx;
}

.upload-btn::after {
  border: none;
}

/* 输入框 */
.form-input {
  width: 100%;
  padding: 20rpx 24rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
}

.form-textarea {
  width: 100%;
  min-height: 160rpx;
  padding: 20rpx 24rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.char-count {
  display: block;
  text-align: right;
  font-size: 22rpx;
  color: #999;
  margin-top: 8rpx;
}

/* 专长标签 */
.tags-input {
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 20rpx;
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.tag-item {
  display: flex;
  align-items: center;
  padding: 8rpx 16rpx;
  background: #667eea;
  color: #fff;
  border-radius: 24rpx;
  font-size: 24rpx;
}

.tag-remove {
  margin-left: 8rpx;
  font-size: 32rpx;
  font-weight: 300;
  padding: 0 4rpx;
}

.add-tag-box {
  display: flex;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.tag-input {
  flex: 1;
  padding: 12rpx 16rpx;
  background: #fff;
  border-radius: 8rpx;
  font-size: 26rpx;
}

.add-tag-btn {
  background: #667eea;
  color: #fff;
  font-size: 24rpx;
  padding: 0 24rpx;
}

.add-tag-btn::after {
  border: none;
}

.tag-suggestions {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.06);
}

.suggestion-tag {
  padding: 6rpx 16rpx;
  background: rgba(102, 126, 234, 0.1);
  color: #667eea;
  border-radius: 24rpx;
  font-size: 22rpx;
}

/* 开关 */
.switch-item {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.form-switch {
  align-self: flex-start;
}

.switch-hint {
  font-size: 22rpx;
  color: #999;
}

/* 操作按钮 */
.action-buttons {
  padding: 0 24rpx;
  margin-top: 24rpx;
}

.save-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 48rpx;
  border: none;
}

.save-btn::after {
  border: none;
}

.save-btn[disabled] {
  opacity: 0.6;
}

/* 提示信息 */
.tips {
  margin: 48rpx 24rpx 0;
  padding: 32rpx;
  background: #fff9e6;
  border-radius: 12rpx;
  border-left: 4rpx solid #faad14;
}

.tips-title {
  display: block;
  font-size: 26rpx;
  color: #faad14;
  font-weight: 500;
  margin-bottom: 12rpx;
}

.tips-text {
  display: block;
  font-size: 24rpx;
  color: #666;
  line-height: 1.8;
  margin-bottom: 4rpx;
}
