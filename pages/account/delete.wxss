/* pages/account/delete.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 32rpx;
}

.delete-content {
  background: #fff;
  border-radius: 24rpx;
  padding: 48rpx 32rpx;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.08);
}

/* 标题区 */
.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 48rpx;
}

.icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 8rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #999;
}

/* 分区标题 */
.section-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 24rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.title-icon {
  font-size: 36rpx;
}

/* 注销须知 */
.notice-section {
  margin-bottom: 32rpx;
  padding: 24rpx;
  background: #fff7e6;
  border-radius: 16rpx;
  border-left: 6rpx solid #faad14;
}

.notice-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.notice-item {
  display: flex;
  gap: 8rpx;
}

.bullet {
  font-size: 26rpx;
  font-weight: 600;
  color: #faad14;
  flex-shrink: 0;
}

.text {
  flex: 1;
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.notice-sub-list {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  padding-left: 32rpx;
}

.sub-item {
  font-size: 24rpx;
  color: #999;
  line-height: 1.6;
}

/* 数据统计 */
.stats-section {
  margin-bottom: 32rpx;
  padding: 24rpx;
  background: #f0f7ff;
  border-radius: 16rpx;
}

.stats-grid {
  display: flex;
  justify-content: space-around;
}

.stat-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stat-number {
  font-size: 48rpx;
  font-weight: 700;
  color: #1890ff;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

/* 确认复选框 */
.confirm-section {
  margin-bottom: 32rpx;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
}

.checkbox-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.checkbox-item:last-child {
  margin-bottom: 0;
}

.checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 3rpx solid #d9d9d9;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  transition: all 0.3s;
}

.checkbox.checked {
  background: #1890ff;
  border-color: #1890ff;
  color: #fff;
  font-size: 24rpx;
  font-weight: 700;
}

.checkbox-text {
  flex: 1;
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  padding-top: 4rpx;
}

/* 按钮组 */
.button-group {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.cancel-btn,
.delete-btn {
  flex: 1;
  height: 88rpx;
  line-height: 58rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
}

.cancel-btn::after {
  border: none;
}

.delete-btn {
  background: linear-gradient(135deg, #f5222d 0%, #ff4d4f 100%);
  color: #fff;
}

.delete-btn.disabled {
  background: #d9d9d9;
  color: #999;
}

.delete-btn::after {
  border: none;
}

/* 联系客服 */
.contact-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 24rpx;
  border-top: 2rpx solid #f0f0f0;
}

.contact-text {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.contact-email {
  font-size: 24rpx;
  color: #1890ff;
}
