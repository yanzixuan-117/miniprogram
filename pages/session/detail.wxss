/* pages/session/detail.wxss */

.session-detail-container {
  min-height: 100vh;
  background: #f7f7f7;
  padding: 32rpx;
  padding-bottom: 120rpx;
}

/* 加载状态 */
.loading-state {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 200rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 错误状态 */
.error-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
  text-align: center;
}

.error-icon {
  font-size: 96rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.error-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 48rpx;
}

.retry-btn {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #2C7EF8;
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
  border: none;
}

/* 课程内容 */
.session-content {
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 状态卡片 */
.status-card {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 32rpx;
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.status-icon {
  font-size: 64rpx;
}

.status-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.status-text {
  font-size: 32rpx;
  font-weight: 500;
  color: #000;
}

.status-desc {
  font-size: 24rpx;
  color: #666;
}

/* 不同状态的颜色 */
.status-card.status-pending {
  background: linear-gradient(135deg, #fff7e6 0%, #fff 100%);
  border-left: 6rpx solid #faad14;
}

.status-card.status-confirmed {
  background: linear-gradient(135deg, #e6f7ff 0%, #fff 100%);
  border-left: 6rpx solid #1890ff;
}

.status-card.status-completed {
  background: linear-gradient(135deg, #f6ffed 0%, #fff 100%);
  border-left: 6rpx solid #52c41a;
}

.status-card.status-cancelled {
  background: linear-gradient(135deg, #fff1f0 0%, #fff 100%);
  border-left: 6rpx solid #ff4d4f;
}

/* 信息卡片 */
.info-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.card-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.title-icon {
  font-size: 36rpx;
}

.title-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #000;
}

/* 日期时间显示 */
.datetime-display {
  display: flex;
  align-items: center;
  gap: 32rpx;
}

.date-calendar {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 140rpx;
  height: 140rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  color: #fff;
  padding: 16rpx;
}

.date-month {
  font-size: 22rpx;
  opacity: 0.9;
}

.date-day {
  font-size: 48rpx;
  font-weight: bold;
  line-height: 1.2;
}

.date-weekday {
  font-size: 22rpx;
  opacity: 0.9;
}

.time-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.time-text {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
}

.time-duration {
  font-size: 24rpx;
  color: #999;
}

/* 教练详情 */
.coach-detail {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.coach-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #f7f7f7;
}

.coach-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.coach-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #000;
}

.coach-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.tag {
  padding: 8rpx 16rpx;
  background: #f0f0f0;
  border-radius: 8rpx;
  font-size: 22rpx;
  color: #666;
}

/* 球馆详情 */
.venue-detail {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.venue-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #000;
}

.venue-address {
  font-size: 24rpx;
  color: #999;
  line-height: 1.5;
}

/* 备注内容 */
.note-content {
  padding: 24rpx;
  background: #f7f7f7;
  border-radius: 12rpx;
}

.note-text {
  font-size: 26rpx;
  color: #333;
  line-height: 1.6;
  white-space: pre-wrap;
  word-break: break-all;
}

.coach-note {
  background: #fffbe6;
}

.empty-note {
  font-size: 26rpx;
  color: #999;
  font-style: italic;
}

/* 元信息 */
.info-meta {
  text-align: center;
  padding: 24rpx 0;
}

.meta-text {
  font-size: 22rpx;
  color: #bbb;
}

/* 课程照片网格 */
.photos-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.photo-item {
  position: relative;
  width: 100%;
  padding-bottom: 100%;
}

.photo-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  object-fit: cover;
}

/* 操作按钮区域 */
.action-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 32rpx;
  background: #fff;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.actions {
  display: flex;
  gap: 24rpx;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  line-height: 58rpx;
  border-radius: 44rpx;
  font-size: 28rpx;
  border: none;
}

.action-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.action-btn.cancel {
  background: #fff;
  color: #ff4d4f;
  border: 2rpx solid #ff4d4f;
}

.action-btn.confirm {
  background: linear-gradient(135deg, #52c41a 0%, #389e0d 100%);
  color: #fff;
}

.action-btn.reject {
  background: #fff;
  color: #ff4d4f;
  border: 2rpx solid #ff4d4f;
}

.action-btn.complete {
  background: linear-gradient(135deg, #1890ff 0%, #096dd9 100%);
  color: #fff;
}
