/* pages/session/list.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 顶部状态栏 */
.status-bar {
  background: #fff;
  padding: 24rpx 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  position: sticky;
  top: 0;
  z-index: 100;
}

.status-tabs {
  display: flex;
  gap: 16rpx;
}

.status-tab {
  padding: 12rpx 32rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  color: #666;
  background: #f5f5f5;
  transition: all 0.3s;
}

.status-tab.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-weight: 500;
}

/* 空状态 */
.empty-state {
  padding: 120rpx 60rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  line-height: 1.6;
}

.empty-hint {
  font-size: 24rpx;
  color: #ccc;
  margin-top: 16rpx;
}

/* 课程列表 */
.session-list {
  padding: 24rpx 30rpx;
}

.session-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: transform 0.2s;
}

.session-card:active {
  transform: scale(0.98);
}

/* 卡片头部 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.coach-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex: 1;
}

.coach-avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  background: #f0f0f0;
}

.session-date {
  text-align: right;
}

.date-day {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  line-height: 1;
}

.date-month {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}

/* 教练信息 */
.coach-details {
  flex: 1;
}

.coach-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.session-time {
  font-size: 26rpx;
  color: #666;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.time-icon {
  font-size: 24rpx;
}

/* 状态标签 */
.status-badge {
  padding: 8rpx 20rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.status-badge.completed {
  background: #e8f5e9;
  colour: #4caf50;
}

.status-badge.pending {
  background: #fff3e0;
  color: #ff9800;
}

.status-badge.cancelled {
  background: #ffebee;
  color: #f44336;
}

/* 课程内容 */
.session-content {
  padding: 24rpx 0;
  border-top: 1rpx solid #f0f0f0;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 20rpx;
}

.content-title {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.content-text {
  font-size: 30rpx;
  color: #333;
  line-height: 1.8;
}

.no-content {
  font-size: 28rpx;
  color: #ccc;
  font-style: italic;
}

/* 反馈评分 */
.session-rating {
  margin-bottom: 20rpx;
}

.rating-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.rating-stars {
  display: flex;
  gap: 8rpx;
}

.star {
  font-size: 36rpx;
  color: #ddd;
}

.star.filled {
  color: #ffc107;
}

/* 卡片底部 */
.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.venue-info {
  font-size: 26rpx;
  color: #666;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.venue-icon {
  font-size: 28rpx;
}

.action-btn {
  padding: 12rpx 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 40rpx;
  font-size: 26rpx;
  border: none;
}

.action-btn:active {
  opacity: 0.8;
}

/* 加载状态 */
.loading {
  padding: 60rpx 0;
  text-align: center;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}
