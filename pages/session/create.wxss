/* pages/session/create.wxss */

.create-session-container {
  min-height: 100vh;
  background: #f7f7f7;
  padding: 32rpx;
  padding-bottom: 140rpx;
}

/* 加载状态 */
.loading-state {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 200rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 错误状态 */
.error-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
  text-align: center;
}

.error-icon {
  font-size: 96rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.error-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 48rpx;
}

.retry-btn {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #2C7EF8;
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
  border: none;
}

/* 课程内容 */
.session-content {
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 卡片通用样式 */
.info-card,
.feedback-card,
.status-card,
.photos-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.card-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.title-icon {
  font-size: 36rpx;
}

.title-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #000;
}

.title-required {
  margin-left: 4rpx;
  color: #ff4d4f;
  font-size: 28rpx;
}

/* 信息行 */
.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-row:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 26rpx;
  color: #666;
  flex-shrink: 0;
}

.info-value {
  font-size: 26rpx;
  color: #333;
  text-align: right;
  flex: 1;
  margin-left: 24rpx;
}

.info-value.note {
  color: #666;
  line-height: 1.5;
}

/* 课程反馈 */
.feedback-input {
  width: 100%;
  min-height: 200rpx;
  padding: 24rpx;
  background: #f7f7f7;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 12rpx;
}

.feedback-count {
  text-align: right;
  font-size: 22rpx;
  color: #999;
}

/* 课程状态选择 */
.status-options {
  display: flex;
  gap: 24rpx;
}

.status-option {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  padding: 32rpx 24rpx;
  background: #f7f7f7;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  position: relative;
}

.status-option.active {
  background: #f0f7ff;
  border-color: #1890ff;
}

.status-icon {
  font-size: 48rpx;
}

.status-text {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.status-check {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 32rpx;
  height: 32rpx;
  background: #1890ff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 20rpx;
}

/* 状态提示 */
.status-tip {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 24rpx;
  background: #fffbe6;
  border-radius: 8rpx;
  margin-top: 24rpx;
}

.tip-icon {
  font-size: 24rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #faad14;
}

/* 课程照片 */
.photos-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.photo-item {
  position: relative;
  width: 100%;
  padding-bottom: 100%;
}

.photo-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  object-fit: cover;
}

.photo-delete {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.delete-icon {
  color: #fff;
  font-size: 32rpx;
  line-height: 1;
}

.photo-add {
  width: 100%;
  padding-bottom: 100%;
  background: #f7f7f7;
  border: 2rpx dashed #d0d0d0;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  position: relative;
}

.add-icon {
  font-size: 48rpx;
  color: #999;
}

.add-text {
  font-size: 24rpx;
  color: #999;
}

.photos-tip {
  margin-top: 16rpx;
  text-align: center;
}

/* 底部按钮 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 32rpx;
  background: #fff;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 44rpx;
  border: none;
}

.submit-btn.disabled {
  opacity: 0.6;
}
